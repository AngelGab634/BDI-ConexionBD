@model MarcaModel

@{
    ViewData["Title"] = "Editar Marca";
}

<div class="text-center">
    <h1>Editar Sucursal</h1>
</div>
<form asp-controller="Marcas" asp-action="MarcasEdit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label asp-for="Nombre" class="form-label">Nombre</label>
        <input asp-for="Nombre" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Descripcion" class="form-label">Descripcion</label>
        <input asp-for="Descripcion" class="form-control" />

    <button type="submit" class="btn btn-primary">Editar</button>
    <a class="btn btn-secondary" asp-controller="Marcas" asp-action="MarcasList">Cancelar</a>
</form>